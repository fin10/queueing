{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@lib/sdk": [
        "libs/sdk/src"
      ],
      "@lib/sdk/*": [
        "libs/sdk/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
